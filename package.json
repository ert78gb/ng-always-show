{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ng-always-show",
  "version": "2.1.0",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "description": "Angular directive the element is always visible on page when document scrolling",
  "dependencies": {
    "ng-html-util": "^2.0.2"
  },
  "devDependencies": {
    "@angular/common": "^6.0.6",
    "@angular/compiler": "^6.0.6",
    "@angular/compiler-cli": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/platform-browser": "^6.0.6",
    "ng-packagr": "^3.0.3",
    "rxjs": "^6.1.0",
    "typescript": "2.7.2",
    "zone.js": "^0.8.26"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts",
      "languageLevel": [
        "dom",
        "es5"
      ]
    },
    "dest": "./dist",
    "whitelistedNonPeerDependencies": [
      "ng-html-util"
    ]
  },
  "peerDependencies": {
    "@angular/core": ">=4.0.3",
    "@angular/common": ">=4.0.3",
    "@angular/platform-browser": ">=4.0.3",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "author": "Robert Kiss <ert78gb@gmil.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ert78gb/ng-always-show.git"
  }
}
